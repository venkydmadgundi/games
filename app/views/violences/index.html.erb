<p id="notice"><%= notice %></p>

<h1>Violences</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @violences.each do |violence| %>
      <tr>
        <td><%= violence.name %></td>
        <td><%= violence.active %></td>
        <td><%= link_to 'Show', violence %></td>
        <td><%= link_to 'Edit', edit_violence_path(violence) %></td>
        <td><%= link_to 'Destroy', violence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

